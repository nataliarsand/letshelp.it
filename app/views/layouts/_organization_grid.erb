<div class="wrapper featuredOrg">
  <% @organizations.each do |organization| %>
    <%= link_to organization do %>
      <div class="bucket <%= cycle('left','right') %>">
        <h3><%= organization.name %></h3>
        <h4><%= organization.city %></h4>
        <p><%= RedCloth.new(organization.needs).to_html.html_safe %></p>
      </div>
    <% end %>
  <% end %>
  <div class="clear"></div>
</div>
